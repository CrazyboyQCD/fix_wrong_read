{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: cargo build",
            "type": "cargo",
            "command": "build",
            "args": [
                "--release",
                "--lib"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {}
            }
        },
        {
            "label": "rust: cargo build example winit",
            "type": "cargo",
            "command": "build",
            "args": [
                "--package",
                "mdanceio",
                "--example",
                "winit_app",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {}
            }
        },
        {
            "label": "wasm: pack",
            "type": "shell",
            "command": "wasm-pack build mdanceio-wasm --out-dir ../target/pkg && python3 scripts/update_wasm_pkg.py target/pkg",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {
                    "RUSTFLAGS": "--cfg=web_sys_unstable_apis"
                }
            }
        },
        {
            "label": "wasm: pack-webgl",
            "type": "shell",
            "command": "wasm-pack build mdanceio-wasm --out-dir ../target/pkg-webgl --scope webgl-supports -- --features webgl && python3 scripts/update_wasm_pkg.py target/pkg-webgl",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {
                    "RUSTFLAGS": "--cfg=web_sys_unstable_apis"
                }
            }
        },
        {
            "label": "rust: ndk build",
            "type": "cargo",
            "command": "ndk",
            "args": [
                "--target",
                "arm64-v8a",
                "--target",
                "armeabi-v7a",
                "--target",
                "x86_64",
                "--target",
                "x86",
                "-o",
                "./target/jniLibs",
                "build",
                "--release",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {
                    "ANDROID_NDK_HOME": "C:/Users/NAiveD/AppData/Local/Android/Sdk/ndk/25.1.8937393",
                    "JAVA_HOME": "C:\\Program Files\\Java\\jdk-11.0.12",
                }
            }
        },
        {
            "label": "rust: cargo run example winit",
            "type": "cargo",
            "command": "run",
            "args": [
                "--package",
                "mdanceio",
                "--example",
                "winit_app",
                "--",
                "--model",
                "<Model Path>",
                "--texture",
                "<Texture Directory>",
                "--motion",
                "<Motion Path>"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {}
            }
        },
        {
            "label": "exec: example winit",
            "type": "shell",
            "command": "target/release/examples/winit_app.exe",
            "args": [
                "--model",
                "<Model Path>",
                "--texture",
                "<Texture Directory>",
                "--motion",
                "<Motion Path>"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "rust: cargo build example winit"
            ],
            "options": {
                "env": {}
            }
        },
        {
            "label": "npm: start - mdance-demo",
            "type": "npm",
            "script": "start",
            "path": "mdance-demo",
            "problemMatcher": [],
            "dependsOn": [
                "wasm: pack",
                "wasm: pack-webgl"
            ],
            "detail": "react-app-rewired start"
        },
        {
            "label": "npm: build - mdance-demo",
            "type": "npm",
            "script": "build",
            "path": "mdance-demo",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "wasm: pack",
                "wasm: pack-webgl"
            ],
            "detail": "react-app-rewired build"
        }
    ]
}